{
  "name": "vue2-simplert-core",
  "description": "Core CSS and JS Logic for Vue2 Simplert Library",
  "version": "1.0.3",
  "license": "MIT",
  "author": "Irfan Maulana (https://github.com/mazipan/)",
  "private": false,
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack-dev-server --hot --color --open",
    "build": "cross-env NODE_ENV=production webpack --progress --hide-modules",
    "pack": "cross-env NODE_ENV=production webpack --progress --hide-modules --config webpack.config.dist.js",
    "lint": "./node_modules/.bin/eslint --ext .js,.vue src test/*.js --fix",
    "test": "./node_modules/.bin/jest --coverage",
    "dist": "npm run build && npm run pack"
  },
  "homepage": "https://github.com/mazipan/vue2-simplert-core/",
  "main": "simplert.js",
  "files": [
    "simplert.js",
    "simplert-config.js",
    "simplert.html",
    "simplert.css"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mazipan/vue2-simplert-core.git"
  },
  "bugs": {
    "url": "https://github.com/mazipan/vue2-simplert-core/issues"
  },
  "keywords": [
    "vue2 alert",
    "vue2 sweet alert",
    "vue2 popup",
    "vue alert",
    "vue sweet alert",
    "vue popup"
  ],
  "dependencies": {
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "compression-webpack-plugin": "^1.1.3",
    "cross-env": "^5.1.3",
    "css-loader": "^0.28.8",
    "eslint": "^4.15.0",
    "eslint-plugin-vue": "4.1.0",
    "file-loader": "^1.1.6",
    "jest": "^22.0.4",
    "vue-jest": "^1.4.0",
    "jsdom": "^11.5.1",
    "jsdom-global": "^3.0.2",
    "node-sass": "^4.7.2",
    "sass-loader": "^6.0.6",
    "vue": "^2.5.13",
    "vue-loader": "^13.7.0",
    "vue-template-compiler": "^2.5.13",
    "vue-test-utils": "^1.0.0-beta.9",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.10.0"
  },
  "eslintIgnore": [
    "test/*.js",
    "dist/*.js",
    "node_modules"
  ],
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:vue/recommended"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "mapCoverage": true,
    "coverageDirectory": "test/coverage",
    "moduleNameMapper": {
      "^vue$": "vue/dist/vue.common.js"
    },
    "moduleFileExtensions": [
      "js",
      "vue"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest"
    }
  }
}
